<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PodAura" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">
            shortEdges
        </item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.PodAura.NoActionBar.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.PodAura</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">@color/splash_background</item>
    </style>

    <style name="Theme.PodAura.Player" parent="Theme.PodAura">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>